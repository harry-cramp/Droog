<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anaglyph.droog">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".NewFlashcard"
            android:parentActivityName=".MainActivity"
            android:label="@string/new_flashcard_activity_name">

        </activity>

        <activity android:name=".Flashcards"
            android:parentActivityName=".MainActivity"
            android:label="@string/new_flashcard_activity_name">

        </activity>

        <activity android:name=".QuizMenu"
            android:parentActivityName=".MainActivity"
            android:label="@string/quiz_activity_name">

        </activity>

        <activity android:name=".QuizPage"
            android:parentActivityName=".QuizMenu"
            android:label="@string/quiz_activity_name">

        </activity>

        <activity android:name=".QuizResults"
            android:label="@string/quiz_results_activity_name">

        </activity>

        <activity android:name=".LoadFlashcardsFromFile"
            android:label="@string/new_flashcard_load_from_file">

        </activity>
    </application>

</manifest>